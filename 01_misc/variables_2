const array = [1,2,3,4];
console.log("array før push", array);
function someFunctionNew() {
    array.push(5);
    console.log("array efter push", array);
}

someFunctionNew();

const array2 = [1,2,3,4];
console.log("array2 før push", array2);
function newFunction() {
    array2 = [5,6,7];
    console.log("array+ efter", array2);
}

